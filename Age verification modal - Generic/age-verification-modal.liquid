<link href="{{ 'age-verification.css' | asset }}" rel="stylesheet">
<script src="{{ 'age-verification.js' | asset }}"></script>

<!-- 
Modal for Bootstrap Framework.
You can replace Title and body.
Create a partial and include it where you need to load the modal window.
-->
<div class="modal fade" id="age-verification" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="age-info">
                                {% if store.logo != empty %}
                                    <img class="modal-logo" src="{{store.logo}}" alt="Logo">
                                {% endif %}
                                <h1 class="mt-3">¡Bienvenido a {{store.name}}!</h1>
                                <p>¿Tienes 18 años o más?</p>
                                <button type="button" id="over-18" data-dismiss="modal" aria-label="Close"
                                    class="btn btn-primary ">Si</button>
                                <button type="button" id="under-18" class="btn btn-secondary">No</button>
                                <p class="disclaimer"><small>Debes verificar que tienes 18 años de edad o más para
                                        ingresar a este sitio.</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>